<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/slide_red"
                android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/toolbar"
                android:background="@drawable/slide_red"
                app:tabSelectedTextColor="#fff"
                app:tabTextColor="#fff">

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="90dp" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_left"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:background="@drawable/bia1"

            android:gravity="center">

            <ImageView
                android:id="@+id/img_avata"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_noel" />

            <LinearLayout

                android:layout_width="280dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_alignTop="@+id/img_avata"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:text="Nguyen thi hai loan"
                    android:textColor="#111"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_datebirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_mail"
                    android:layout_marginLeft="20dp"
                    android:text="Abcd@gmail.com"
                    android:textColor="#111"
                    android:textSize="17sp"

                    />
            </LinearLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/ls_view"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/anh6"
            android:divider="#FF0000"
            android:dividerHeight="0.5dp"
            android:paddingTop="5dp">


        </ListView>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
