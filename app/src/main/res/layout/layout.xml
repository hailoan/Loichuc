<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main__sendsms_arclayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen_noel"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_nd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/frame_noel"
        android:gravity="center_horizontal|center_vertical"
        android:text="Hai loan xin chao cac ban"
        android:textColor="#111"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/ls_buton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/preview"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="Trước"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/send_"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="Gửi"
            android:textAllCaps="false"

            android:textSize="20dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="Tiếp"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>
