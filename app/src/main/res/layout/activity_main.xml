<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/screen7"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_weight="11"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>

    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_img"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_noel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width_img"
            android:layout_weight="1"
            android:src="@drawable/img_valentine" />

        <ImageView
            android:id="@+id/img_valentine"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width_img"
            android:layout_weight="1"
            android:src="@drawable/img_noel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_img"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_nammoi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width_img"
            android:layout_weight="1"
            android:src="@drawable/img_tet" />

        <ImageView
            android:id="@+id/img_sinhnhat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width_img"
            android:layout_weight="1"
            android:src="@drawable/img_sinhnhat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_img"
        android:layout_weight="1"
        android:weightSum="1">

        <ImageView
            android:gravity="left"
            android:id="@+id/img_phunuvn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_img"
            android:src="@drawable/img_women" />
    </LinearLayout>

</LinearLayout>
