<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/screen2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_noel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/heigh_land_img"
            android:layout_weight="1"
            android:src="@drawable/img_noel" />

        <ImageView
            android:id="@+id/img_valentine"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/heigh_land_img"
            android:layout_weight="1"
            android:src="@drawable/img_valentine" />

        <ImageView
            android:id="@+id/img_nammoi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/heigh_land_img"
            android:layout_weight="1"
            android:src="@drawable/img_tet" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sinhnhat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/heigh_land_img"
            android:layout_weight="1"
            android:src="@drawable/img_sinhnhat" />

        <ImageView
            android:id="@+id/img_phunuvn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/heigh_land_img"
            android:layout_weight="1"
            android:src="@drawable/img_women" />

    </LinearLayout>

</LinearLayout>
